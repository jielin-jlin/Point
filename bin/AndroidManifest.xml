<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.point"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/pointlogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/pointlogo"
        android:testOnly="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/signuptitle" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".Activitymain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Event"
            android:label="@string/title_activity_eventpage" >
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name=".Activityinfo"
            android:label="@string/title_activity_activityinfo" >
        </activity>
        <activity
            android:name=".Eventinfo"
            android:label="@string/title_activity_eventinfo" >
        </activity>
        <activity
            android:name=".Participate"
            android:label="@string/title_activity_participate" >
        </activity>
    </application>

</manifest>
